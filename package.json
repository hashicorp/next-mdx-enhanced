{
  "name": "next-mdx-enhanced",
  "description": "Next.js plugin for rendering MDX with layouts and front matter",
  "version": "3.0.0",
  "bugs": {
    "url": "https://github.com/hashicorp/next-plugin-mdx-enhanced/issues"
  },
  "contributors": [
    "Jeff Escalante",
    "Kevin Pruett"
  ],
  "dependencies": {
    "@mdx-js/loader": "^1.6.1",
    "debug": "^4.1.1",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "loader-utils": "^2.0.0",
    "prebuild-webpack-plugin": "1.1.0",
    "stringify-object": "^3.3.0"
  },
  "devDependencies": {
    "cross-spawn": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "next": "^9.4.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rmfr": "^2.0.0",
    "webpack": "^4.43.0"
  },
  "homepage": "https://github.com/hashicorp/next-plugin-mdx-enhanced#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ]
  },
  "keywords": [
    "front matter",
    "layout",
    "mdx",
    "nextjs",
    "plugin"
  ],
  "license": "MPL-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashicorp/next-plugin-mdx-enhanced.git"
  },
  "scripts": {
    "lint": "prettier --write \"./**/*.{js,jsx,json}\"",
    "release:major": "release major && npm publish",
    "release:minior": "release minior && npm publish",
    "release:patch": "release patch && npm publish",
    "test": "jest",
    "test-dev-mode": "cd __tests__/fixtures/basic && next dev"
  }
}
